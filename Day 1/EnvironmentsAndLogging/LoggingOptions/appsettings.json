{
  "Logging": {
    // With just this section of config we are logging based on the logging category.
    // We can also filter based on the logging provider. See below section.
    "LogLevel": {
      // Default category is applied to every project namespace (that is also for every custom class in LoggingOptions namespace).
      // If you want to drill down more you put another category like below.
      "Default": "Information",
      //"Microsoft": "Warning",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "LoggingOptions.Pages.PrivacyModel": "Warning",
      "LoggingOptions.Services.PrivacyService": "Trace"
    },
    // Here we have filtering logic specific for the Debug Logging Provider.
    // All other enabled logging providers will have the default above filtering logic applied.
    "Debug": {
      "LogLevel": {
        "Default": "Warning",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Warning",
        "LoggingOptions.Pages.PrivacyModel": "Warning",
        "LoggingOptions.Services.PrivacyService": "Warning"
      }
    }
  },
  "AllowedHosts": "*"
}
